<div class="row actions">
<a class="btn btn-info" href="<%= adminprefix %>/person">People</a>
<a class="btn btn-primary" href="<%= adminprefix %>/person/<%= item.id %>/edit">Edit Person</a>
<a class="btn btn-danger" href="<%= adminprefix %>/person/<%= item.id %>/remove">Remove Person</a>
</div>

<div class='row'>
    <table class="table-striped table-bordered">
        <tr>
            <td>Username</td>
            <td><%= item.username %></td>
        </tr>
        <tr>
            <td>Name</td>
            <td><%= item.name %></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><%= item.email ? item.email : "" %></td>
        </tr>
        <tr>
            <td>Hashed Password</td>
            <td><%= item.password %></td>
        </tr>
    </table>
</div>

<div class='row'>
<h2>Projects</h2>

<table class="table-striped table-bordered">
    <tr>
        <th></th>
        <th>Name</th>
        <th></th>
    </tr>
<% projects.forEach(function (project) { %>
    <tr>
        <td><a href="<%= adminprefix %>/project/<%= project.id %>">View</a></td>
        <td><%= project.name %></td>
    </tr>
<% }); %>
</table>
</div>
